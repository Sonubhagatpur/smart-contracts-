contract Marketplace is Ownable,ReentrancyGuard {
    using Counters for Counters.Counter;
    using SafeMath for uint256;
    Counters.Counter private _itemIds;
    Counters.Counter private _itemsSold;
    uint256 public fees=100;
    uint256 divider=10000;
    IERC20 public tokenContract=IERC20(address(this));
     
     constructor() Ownable(msg.sender){
       
     }
     
     struct MarketItem {
         uint itemId;
         address nftContract;
         uint256 tokenId;
         address payable creator;
         address payable owner;
         uint256 price;
         bool sold;
         bool token;
         uint256 royalties;
         bool isListed;
     }
     
     mapping(address=>mapping(uint256=>MarketItem)) public idToMarketItem;
     event MarketItemCreated (
        uint indexed itemId,
        address indexed nftContract,
        uint256 indexed tokenId,
        address creator,
        address owner,
        uint256 price,
        bool sold
     );
     
     event MarketItemSold (
         uint indexed itemId,
         address owner
         ); 
    
    function changeFees(uint256 _fee) public onlyOwner{
        fees=_fee;
    }
    function changeToken(IERC20 _newToken) public onlyOwner{
        tokenContract=IERC20(_newToken);
    }
    function createMarketItem(
        address nftContract,
        uint256 tokenId,
        address getRoyalty,
        uint256 price,
        bool isToken,
        uint256 royalties
        ) public payable nonReentrant {
            require(price > 0, "Price must be greater than 0");
            require(msg.sender==IERC721(nftContract).ownerOf(tokenId),"Only Owner can list Item On MarketPlace");
            _itemIds.increment();
            uint256 itemId = _itemIds.current();
            if(getRoyalty == address(0)){
                getRoyalty = msg.sender;
            }
  
            idToMarketItem[nftContract][tokenId] =  MarketItem(
                itemId,
                nftContract,
                tokenId,
                payable(getRoyalty),
                payable(msg.sender),
                price,
                false,
                isToken,
                royalties,
                true
            );
            
            emit MarketItemCreated(
                itemId,
                nftContract,
                tokenId,
                getRoyalty,
                msg.sender,
                price,
                false
            );
        }
        
    function createMarketSale(
        address token,
        uint256 tokenId,
        uint256 amount
        ) public payable  {
            uint price = idToMarketItem[token][tokenId].price;
            bool sold = idToMarketItem[token][tokenId].sold;
            uint256 signerID = idToMarketItem[token][tokenId].tokenId;
            require(!sold , "This Sale has alredy finnished of this Item");
            if(idToMarketItem[token][tokenId].token){
                require(amount >= price, "Amount is low");
                uint256 royaltiesTax=amount.mul(idToMarketItem[token][tokenId].royalties).div(divider); 
                uint256 tax=amount.mul(fees).div(divider); 
                (tokenContract).transferFrom(msg.sender,owner(),tax);
                (tokenContract).transferFrom(msg.sender,idToMarketItem[token][tokenId].creator,royaltiesTax);
                (tokenContract).transferFrom(msg.sender,idToMarketItem[token][tokenId].owner,amount.sub(royaltiesTax).sub(tax));
            }else{
                require(msg.value >= price, "Transaction Amount is low");
                uint256 royaltiesTax=(msg.value).mul(idToMarketItem[token][tokenId].royalties).div(divider);
                uint256 tax=(msg.value).mul(fees).div(divider);
                payable(owner()).transfer(tax);
                idToMarketItem[token][tokenId].creator.transfer(royaltiesTax);
                idToMarketItem[token][tokenId].owner.transfer((msg.value).sub(royaltiesTax).sub(tax));
            }
            // Transfer token from signer to recipient
            IERC721(idToMarketItem[token][tokenId].nftContract).transferFrom(idToMarketItem[token][tokenId].owner,msg.sender,signerID);
            
            emit MarketItemSold(
                tokenId,
                msg.sender
                );
            idToMarketItem[token][tokenId].owner = payable(msg.sender);
            _itemsSold.increment();
            idToMarketItem[token][tokenId].sold = true;
            idToMarketItem[token][tokenId].isListed = false;
        }

}
